---
import ProjectCard from './ProjectCard.astro';
import type { Project } from './types';

const projects: Project[] = [
{
    name: 'License2Succeed',
    category: 'Front End, Visualization',
    description: 'A mapping and visualization tool that tracks the distribution of these liquor licenses, increasing transparency and enabling equitable access to these licenses by aspiring restaurateurs. My primary role was to build out the map page and frontend architecture.',
    tools: 'React, Typescript, MapLibre, Python',
    year: '2025',
    url: 'https://license2succeed.org',
    githubUrl: 'https://github.com/codeforboston/boston-liquor-license-tracker'
  },
  {
    name: 'MAPLE: Massachusetts Platform for Legislative Engagement',
    category: 'Full Stack',
    description: 'A legislative engagement platform that provides a public archive of legislative testimony, standardizes, and demystifies the testimony process, so that more people can make their voices heard. It is a space for constituents and legislators to maintain prolonged focus on key issues, and to learn more efficiently about the laws that will shape our lives.',
    tools: 'Next.js, Typescript, Python, Firebase',
    year: '2024',
    url: 'https://www.mapletestimony.org/',
    githubUrl: 'https://github.com/codeforboston/maple'
  },
  {
    name: 'Work in the USA: The Past Decade of US Work Visas in Numbers',
    category: 'Front End, Data, Visualization',
    description: "Final project for Harvard Extension's Visualization class. We collected, cleaned, and visualized data on work visas from various government sources.",
    tools: 'JavaScript, d3.js, Python',
    year: '2018',
    url: 'https://seatuna.github.io/us-immigration-vis',
    githubUrl: 'https://github.com/seatuna/us-immigration-vis'
  },
  {
    name: 'Exploration of Homicide Data',
    category: 'Data Science',
    description: "Final project for Harvard Extension's Python for Data Science course. KNN algorithm was trained and evaluated to a publicly available homicide dataset.",
