---
import { Image } from "astro:assets";
import me1 from "../assets/me1.jpeg";
import me2 from "../assets/me2.jpeg";
import linkedinIcon from "../assets/linkedin.svg";
import githubIcon from "../assets/github.svg";
---

<div id="bio-card">
  <div class="top-section">
    <p class="name">Celena Toon</p>
    <div class="image-container">
      <Image
        class="profile-image image-default"
        src={me1}
        alt="Picture of Celena peeking out from behind a pillar"
      />
      <Image
        class="profile-image image-hover"
        src={me2}
        alt="Picture of Celena peeking out from behind a pillar, trying to get a closer look at something"
      />
    </div>
    <div class="section-container">
      <p class="title">Frontend Software Engineer</p>
      <p>10 years experience</p>
      <p>üìç Boston, MA</p>
      <br />
      <p>
        <a href="https://www.linkedin.com/in/celena-toon/"
          ><Image src={linkedinIcon} height="25" width="25" alt="LinkedIn" /> LinkedIn</a
        >
      </p>
      <p>
        <a href="https://github.com/seatuna"
          ><Image src={githubIcon} height="25" width="25" alt="GitHub" /> GitHub</a
        >
      </p>
    </div>
  </div>
  <hr />
  <div class="section-container">
    <div class="skills-section">
      <p class="title">Languages</p>
      <p>Javascript, Typescript, Python</p>
    </div>

    <div class="skills-section">
      <p class="title">Libraries & Frameworks</p>
      <p>
        React, Next.js, Tailwind CSS, Redux, Styled Components, Storybook,
        GraphQL, MapLibre, Chart.js, Electron
      </p>
    </div>
    <div class="skills-section">
      <p class="title">Tools</p>
      <p>Git, CI/CD, Docker, npm, yarn</p>
    </div>
    <div class="skills-section">
      <p class="title">Interests</p>
      <p>Language learning, visualizations, traveling, food</p>
    </div>
  </div>
</div>

<style>
  /* Main container */
  #bio-card {
    background-color: #f0f0f0;
    border: 2px solid var(--border-color);
    border-radius: 20px;
    padding: 1rem;
    width: fit-content;
  }

  a {
    display: inline-flex;
    align-items: center;
  }

  /* Layout sections */
  .top-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .name {
    font-size: 24px;
    font-weight: 600;
    margin: 1rem 0;
  }

  /* Image components */
  .image-container {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 50%;
    position: absolute;
    transition: opacity 0.6s ease-in-out;
  }

  .image-default {
    opacity: 1;
  }

  .image-hover {
    opacity: 0;
  }

  /* Image hover states */
  .image-container:hover .image-default {
    opacity: 0;
  }

  .image-container:hover .image-hover {
    opacity: 1;
  }

  /* Section containers */
  .section-container {
    margin: 1rem 0;
  }

  .section-container p:not(.title) {
    margin: 0;
  }

  .section-container .title {
    margin-bottom: 0.5rem;
  }

  /* Skills section */
  .skills-section p:not(.title) {
    margin: 0;
    padding-left: 1rem;
  }

  /* Utility classes */
  .title {
    font-weight: 600;
  }

  @media (min-width: 1280px) {
    #bio-card {
      width: 250px;
    }
  }
</style>
